<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ascv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/scanFragmentBackgroundColor">


    <FrameLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/scanFragmentBackgroundColor"
            android:layout_gravity="center">
            <uk.co.airsource.android.common.ui.cameraview.ASCameraViewImpl2
                android:layout_width="match_parent"
                ascv:ascamera_camera_type="back"
                android:layout_height="match_parent"
                android:id="@+id/camera_texture_view"/>
        </FrameLayout>

        <vcode.vstenterprises.sdk.ui.CircleView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/circle_view"/>

    </FrameLayout>

</RelativeLayout>
